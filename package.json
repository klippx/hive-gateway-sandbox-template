{
  "name": "hive-gateway-sandbox-template",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "repository": "https://github.com/klippx/hive-gateway-sandbox-template",
  "workspaces": [
    "gateway",
    "shared",
    "subgraphs/*"
